mixin listLink(url, text, liClass, aClass)
  li(class=liClass)
    a(class=aClass, href=url)&attributes(attributes)= text

mixin textarea(inputId, labelText)
  div.contact-form__input-wrap
    label.contact-form__label(for=inputId)= labelText
    textarea.contact-form__textarea(id=inputId)&attributes(attributes)

mixin input(inputId, labelText)
  div.contact-form__input-wrap
    label.contact-form__label(for=inputId)= labelText
    input.contact-form__input(id=inputId)&attributes(attributes)

mixin button(text, url)
  a.button(href=url)= text
    svg.button__svg(xmlns='http://www.w3.org/2000/svg', version='1.1', x='0', y='0', viewBox='0 -1 16 10', xml:space='preserve')
      polyline.button__polyline(points='1,4 15,4')
      polyline.button__polyline(points='11,1 15,4 11,7')

mixin news(img, alt, title, date, text)
  .news-item.row
    .news-item__img
      img(src=img, alt=alt)
    .news-item__body
      h4.h4= title
      .news-item__date= date
      p.news-item__text= text

mixin work(id, title, duration, description)
  a.work-item.row(href='#', data-work-id=id)
    .work-item__img(style=`background-image: url(/img/works/${id}.jpg)`)
      button.plyr__play-large.plyr__play-custom(type='button', aria-label='Play')
        include ../2-components/_icon-play
        span.plyr__sr-only Play
      .work-item__duration= duration
    .work-item__body
      h4.work-item__title= title
      p.work-item__description!= (description + '').replace(/\n/g, '<br>')

mixin videoPlayer(videos)
  - const preloadedVideo = videos[0];
  .video-player
    div(data-type='vimeo', data-video-id=preloadedVideo.id)
  .row
    p.video-description!= String(preloadedVideo.description).replace(/\n/g, '<br>')
  .video-gallery.row
    each video in videos
      +work(video.id, video.title, video.duration, video.description)

mixin slide(url, alt)
  li
    img(src=url, alt=alt)
